{
	"name": "@neoncitylights/piper",
	"version": "0.0.0",
	"description": "TypeScript library to make walking through the DOM easier",
	"license": "MIT",
	"author": {
		"name": "Samantha",
		"url": "https://github.com/neoncitylights"
	},
	"bugs": "https://github.com/wandering-app/piper/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wandering-app/piper.git"
	},
	"funding": {
		"type": "individual",
		"url": "https://github.com/sponsors/neoncitylights"
	},
	"type": "module",
	"main": "./dist/piper.umd.js",
	"module": "./dist/piper.es.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/piper.es.js",
			"require": "./dist/piper.umd.js"
		}
	},
	"files": [
		"dist"
	],
	"directories": {
		"test": "tests"
	},
	"scripts": {
		"build": "vite build",
		"build:typedoc": "npx typedoc",
		"build:all": "npm run build && npm run build:typedoc",
		"clean": "rm -rf ./dist/ ./docs/typedocs/",
		"deploy": "gh-pages -d ./docs/typedocs",
		"test": "vitest --coverage",
		"test:ci": "npm run test -- run",
		"test:ui": "npm run test -- --ui",
		"test:watch": "npm run test -- --watch",
		"test:all": "npm run test:ci && npm run lint",
		"lint": "eslint src --ext .ts,.tsx",
		"lint:fix": "eslint --fix src --ext .ts,.tsx",
		"prepare": "npm run build",
		"prepublishOnly": "npm run lint",
		"preversion": "npm run lint",
		"version": "npm run lint && git add -A src",
		"postversion": "git push && git push --tags"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "6.13.1",
		"@typescript-eslint/parser": "6.13.1",
		"@vitest/coverage-v8": "^0.34.1",
		"@vitest/ui": "^0.34.1",
		"eslint": "8.55.0",
		"gh-pages": "6.1.0",
		"jsdom": "^22.1.0",
		"typedoc": "0.25.4",
		"typescript": "5.3.2",
		"vite": "^5.0.4",
		"vite-plugin-dts": "^3.3.1",
		"vitest": "^0.34.1"
	}
}
